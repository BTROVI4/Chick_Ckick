<h1>Listing cities</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Code</th>
    <th colspan="3"></th>
  </tr>

  <% @cities.each do |city| %>
    <tr>
      <td><%= city.title %></td>
      <td><%= city.code %></td>
      <td><%= link_to 'Show', city_path(city) %></td>
      <td><%= link_to 'Destroy', city_path(city),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>